{
  "name": "asset-sim-pro",
  "version": "1.0.0",
  "description": "Professional Asset Management Simulator - Enterprise-grade simulation platform for Asset Management Firms, Hedge Funds, and Proprietary Trading Desks",
  "scripts": {
    "start": "node scripts/load-env.js nx serve client",
    "start:all": "concurrently --names \"frontend,backend\" --prefix-colors \"cyan,magenta\" \"npm run start\" \"npm run backend:start\"",
    "dev": "npm run start:all",
    "build": "node scripts/load-env.js nx build client",
    "build:prod": "node scripts/load-env.js nx build client --configuration=production",
    "test": "nx test",
    "test:unit": "npm run backend:test",
    "test:unit:watch": "cd apps/backend && vitest",
    "test:coverage": "npm run backend:test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "lint": "nx run-many --target=lint --all",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "backend:start": "nx serve backend",
    "backend:build": "nx build backend",
    "backend:test": "nx test backend",
    "backend:test:coverage": "nx test backend --coverage",
    "db:init": "ts-node --project scripts/tsconfig.json scripts/init-db.ts",
    "seed:local": "ts-node --project scripts/tsconfig.json scripts/seed-local.ts",
    "screenshots": "ts-node --project scripts/tsconfig.json scripts/capture-screenshots.ts"
  },
  "keywords": [
    "trading",
    "simulation",
    "asset-management",
    "portfolio-management"
  ],
  "author": "AssetSim Pro Team",
  "license": "ISC",
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.1.0",
    "@angular-devkit/core": "^21.1.0",
