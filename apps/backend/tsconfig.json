{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "baseUrl": ".",
    // Path mappings override base config due to different baseUrl
    // Base paths are relative to monorepo root, these are relative to apps/backend
    "paths": {
      "@assetsim/shared/finance-models": [
        "../../libs/shared/finance-models/src/index.ts"
      ],
      "@assetsim/shared/error-models": [
        "../../libs/shared/error-models/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../../libs/shared/error-models/src/**/*",
    "../../libs/shared/finance-models/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "../../libs/**/*.spec.ts",
    "../../libs/**/*.test.ts"
  ]
}
